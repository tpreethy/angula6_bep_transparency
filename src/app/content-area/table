<mat-table #table [dataSource]="filesListModel" *ngFor="let element of filesListModel" class="mat-elevation-z8">
    <ng-container matColumnDef="Name">
      <mat-header-cell *matHeaderCellDef>File Name</mat-header-cell>
      <mat-cell *matCellDef="let element">{{element?.Name}}</mat-cell>
    </ng-container>

    <ng-container matColumnDef="ReportType">
      <mat-header-cell *matHeaderCellDef>Report Type</mat-header-cell>
      <mat-cell *matCellDef>
          <mat-form-field>
             <mat-select placeholder="Select Report Type" [(ngModel)]="element.ReportType" (change)="selectReportType($event.target.value)" required>
               <mat-option *ngFor="let reportName of reportType" [value]="reportName">{{reportName}}</mat-option>
             </mat-select>
          </mat-form-field>
       </mat-cell>
    </ng-container>

    <ng-container matColumnDef="Size">
      <mat-header-cell *matHeaderCellDef>Size</mat-header-cell>
      <mat-cell *matCellDef="let element">{{element.Size/1024/1024 | number:'.2'}} MB</mat-cell>
    </ng-container>

    <ng-container matColumnDef="Status">
      <mat-header-cell *matHeaderCellDef>Status</mat-header-cell>
      <mat-cell *matCellDef="let element">{{element.Status}}</mat-cell>
    </ng-container>
    <ng-container matColumnDef="Actions">
      <mat-header-cell *matHeaderCellDef>Actions</mat-header-cell>
      <mat-cell *matCellDef="let row" >
        <button mat-button (click)="uploadfile(element)">Upload</button>
      </mat-cell> 
    </ng-container>

    <mat-header-row *matHeaderRowDef="displayedColumns"></mat-header-row>
    <mat-row *matRowDef="let row; columns: displayedColumns"></mat-row>
  </mat-table>
  
  
  
  
  
  
  contentarea.ts
  ------------------------
  
  dataSource= new MatTableDataSource(this.filesListModel);
  displayedColumns: string[] = ['Name', 'ReportType', 'Size', 'Status', 'Actions'];
